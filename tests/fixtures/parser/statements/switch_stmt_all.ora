contract SwitchStmtAll {
    pub fn demo() {
        var x: u256 = 5;

        // Basic literal arms and else expr arm (semicolon required)
        switch (x) {
            0 => x = 10;
            1 => x = 11;
            else => x = 9;
        }

        // Range arm and labeled block arm
        switch (x) {
            0...3 => x = 1;
            4...7 => label_arm: { x = x + 2; };
            else => { x = 0; }
        }

        // Labeled switch wrapping
        outer: switch (x) {
            0 => x = 100;
            1...2 => { x = x + 1; };
            else => { continue :outer (0); }
        }

        _ = x;
    }
}
