contract EventContract {
    storage {
        counter: u256,
        events_logged: u256,
    }
    
    pub fn increment() {
        counter += 1;
        log("Counter incremented", counter);
        events_logged += 1;
    }
    
    pub fn decrement() {
        requires(counter > 0);
        counter -= 1;
        log("Counter decremented", counter);
        events_logged += 1;
    }
    
    pub fn get_counter() -> u256 {
        return counter;
    }
    
    pub fn get_events_count() -> u256 {
        return events_logged;
    }
}