// ==========================================
// SWITCH STATEMENTS SYNTAX TEST
// ==========================================
// This file tests basic switch statement syntax

// Define enum for switch testing
enum UserRole : u8 {
    Guest = 0,
    Member = 1,
    Moderator = 2,
    Admin = 3
}

contract SwitchTest {
    storage var switch_result: u256;
    
    pub fn test_basic_switch(value: u256) {
        // Basic switch statement with integer values
        switch (value) {
            0 => {
                switch_result = 10;
            },
            1 => {
                switch_result = 20;
            },
            2 => {
                switch_result = 30;
            },
            else => {
                switch_result = 999;
            }
        }
    }
}
